@model IEnumerable<CalendarApp.Models.Event>

<h2>Event List</h2>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.StartTime</td>
                <td>@item.EndTime</td>
                <td>@item.Description</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Event/CreateEvent" class="btn btn-primary">Add New Event</a>
<a href="/Event/UpdateEvent" class="btn btn-primary">Update Event</a>



<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th,
    td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        font-weight: bold;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
</style>